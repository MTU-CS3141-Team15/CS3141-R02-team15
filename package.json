{
    "name": "habit-helper",
    "version": "0.1.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev --parallel",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,json}\"",
        "prepare": "husky install",
        "db:start": "docker compose up -d",
        "db:stop": "docker compose stop"
    },
    "lint-staged": {
        "apps/**/*.{js,jsx,ts,tsx}": [
            "eslint --fix"
        ],
        "**/*.{js,jsx,ts,tsx,md,json}": [
            "prettier --write"
        ],
        "**/*.prisma": [
            "prisma format"
        ]
    },
    "devDependencies": {
        "husky": "^7.0.4",
        "lint-staged": "^12.3.4",
        "prettier": "^2.5.1",
        "turbo": "1.1.4"
    },
    "engines": {
        "npm": ">=7.0.0",
        "node": ">=14.0.0"
    },
    "packageManager": "yarn@1.22.17"
}
